package view;

import java.awt.BorderLayout;
import java.util.ArrayList;

import javax.swing.JPanel;
import javax.swing.JTable;
import javax.swing.table.DefaultTableModel;

import controll.EmpList;
import controll.TimeCardList;
import controll.Timecard;

public class TcPanel extends JPanel{
// id(int), employeeId(int), date(string), hours(int)
	
	private String[] columNames = {"Id:","Employee:","Date:","Hours:"};
	private Object[][] data = {{0,1,"1993",20}};
	
	public TcPanel(){}
	
	public TcPanel(TimeCardList tcList, EmpList empList) {
		JTable table = new JTable(new DefaultTableModel(columNames, tcList.size())) {
			private static final long serialVersionUID = 1L;

	        public boolean isCellEditable(int row, int column) {                
	                return false;               
	        };
		};
		
		DefaultTableModel model = (DefaultTableModel) table.getModel();
		for (Timecard timecard : tcList) {
			model.addRow(new Object[]{""+timecard.getId(), ""+timecard.getEmpId(), timecard.getDate(),""+timecard.getHours()});
		}
		table.setFillsViewportHeight(true);
		setLayout(new BorderLayout());
		add(table.getTableHeader(), BorderLayout.PAGE_START);
		
		add(table,BorderLayout.CENTER);
	
	
	
	}

}
