package view;

import java.awt.Color;

import javafx.scene.text.Font;

import javax.swing.JButton;

public class Button extends JButton {
	private java.awt.Font boldFont = new java.awt.Font("Tahoma",java.awt.Font.BOLD,25);

	
	public Button(String text, String tool, String type){
		setText(text);
		setToolTipText(tool);
		if (type.equals("add")) {
			setFont(boldFont);
			setText("+");
			setForeground(new Color(0,200,0));
		}else if (type.equals("cancel") {
			setFont(boldFont);
			setText("-");
		}else if (type.equals("delete")) {
			setFont(boldFont);
			setText("×");
		}
	}
}
