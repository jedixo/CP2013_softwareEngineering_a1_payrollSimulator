package test;

import com.sun.glass.ui.Timer;

import view.LoadingBar;

public class LoadingBarTest {

	public static void main(String[] args) {
		LoadingBar load = new LoadingBar("test");
		load.updateBar(2, "text");;
		for (int i = 3; i < 100; i++) {
			load.updateBar(i);
			try {
				Thread.sleep(500);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		load.dispose();
	}

}
